<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"

    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:gravity="center_vertical"
        android:padding="@dimen/padding_left_and_right">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="时段房"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_20"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/padding_top"
                android:text="有房，不可取消"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_14"/>

        </LinearLayout>

        <Button
            android:id="@+id/hotel_btn_time_order"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:background="@drawable/btn_order"
            android:layout_alignParentRight="true"
            android:text="预定"
            android:textColor="@color/white"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/hotel_btn_time_order"
            android:paddingRight="@dimen/padding_left_and_right"
            android:orientation="vertical">

            <TextView
                android:id="@+id/hotel_tv_time_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥ 134"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_20"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/padding_top"
                android:text="2 小时"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_14"/>

        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="@color/white"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:gravity="center_vertical"
        android:padding="@dimen/padding_left_and_right">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="午夜房"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_20"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/padding_top"
                android:text="有房，不可取消"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_14"/>

        </LinearLayout>

        <Button
            android:id="@+id/hotel_btn_night_order"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_alignParentRight="true"
            android:textColor="@color/white"
            android:background="@drawable/btn_order"
            android:text="预定"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/hotel_btn_night_order"
            android:paddingRight="@dimen/padding_left_and_right"
            android:orientation="vertical">

            <TextView
                android:id="@+id/hotel_tv_night_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥ 334"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_20"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/padding_top"
                android:text="嗨住到天明"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_14"/>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
